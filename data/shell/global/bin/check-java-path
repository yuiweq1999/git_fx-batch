#!/bin/bash
# 檢查java路徑

check_java_path() {
    if [ -z "${JAVA_HOME}" ]; then
        echo "{JAVA_HOME} is not set. Please set it manually."
        exit 1
    fi

    java_path="${JAVA_HOME}/bin"

    if [ ! -x "${java_path}" ]; then
        echo "Java executable not found in ${JAVA_HOME}. Please set JAVA_HOME correctly."
        exit 1
    fi
}
check_java_path